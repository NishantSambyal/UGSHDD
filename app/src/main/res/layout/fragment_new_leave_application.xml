<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fcfbfb"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@color/heading_background"
            android:padding="5dp"
            android:text="New Leave Application"
            android:textAlignment="center"
            android:textColor="@color/heading_text"
            android:textSize="@dimen/titleHeading"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/vehicle_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/employee_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center_vertical|left"
                    android:text="Employee Name"
                    android:textColor="#000000"
                    android:textSize="@dimen/mobile_label_font_size" />

                <EditText
                    android:id="@+id/empoyee_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/editbox_style"
                    android:imeOptions="actionNext"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical|left"
                    android:text="Date"
                    android:textColor="#000"
                    android:textSize="@dimen/mobile_label_font_size" />

                <EditText
                    android:id="@+id/date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/editbox_style"
                    android:imeOptions="actionNext"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/leave_type"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center_vertical|left"
                    android:text="Leave Type"
                    android:textColor="#000"
                    android:textSize="@dimen/mobile_label_font_size" />

                <EditText
                    android:id="@+id/leave_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/editbox_style"
                    android:imeOptions="actionNext"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"

                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/leave_balance"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center_vertical|left"
                    android:text="Leave Balance"
                    android:textColor="#000"
                    android:textSize="@dimen/mobile_label_font_size" />


                <EditText
                    android:id="@+id/leave_balance_tv"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/editbox_style"
                    android:imeOptions="actionNext"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/from_date"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center_vertical|left"
                    android:text="From Date"
                    android:textColor="#000"
                    android:textSize="@dimen/mobile_label_font_size" />


                <EditText
                    android:id="@+id/from_date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/editbox_style"
                    android:imeOptions="actionNext"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:weightSum="1">


                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="  Half Day" />

                </LinearLayout>


                <TextView
                    android:id="@+id/to_date"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center_vertical|left"
                    android:text="To Date"
                    android:textColor="#000"
                    android:textSize="@dimen/mobile_label_font_size" />


                <EditText
                    android:id="@+id/to_date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/editbox_style"
                    android:imeOptions="actionNext"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:weightSum="1">


                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="  Half Day" />

                </LinearLayout>

                <TextView
                    android:id="@+id/leave_reason"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:gravity="center_vertical|left"
                    android:text="Leave Reason"
                    android:textColor="#000"
                    android:textSize="@dimen/mobile_label_font_size" />


                <EditText
                    android:id="@+id/leave_reason_tv"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/editbox_style"
                    android:imeOptions="actionNext"
                    android:maxLines="4"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <android.support.v7.widget.AppCompatButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"

                        android:background="@drawable/button_green"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="@dimen/titleHeading" />

                    <android.support.v7.widget.AppCompatButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/button"
                        android:elevation="5dp"
                        android:text="cancel"
                        android:textColor="@color/white"
                        android:textSize="@dimen/titleHeading" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>
